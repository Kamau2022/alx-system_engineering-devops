# a script that is installing nginx on server
exec {'apt-get-update':
    command => 'apt-get update',
    path    => '/usr/bin'
}
package {'nginx':
       ensure => installed,
       require => Exec['apt-get-update'],
}
file {'/var/www/html/index.html':
    content => 'Hello World!',
    require => Package['nginx'],
}
